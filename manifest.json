{
  "manifest_version": 3,
  "name": "seongnam city",
  "description": "성남시 공공시설 대관 온라인 예약신청",
  "version": "1.0.0",
  "action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html",
    "default_title": "마루공원 예약 확장"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["content.js"],
      "run_at": "document_end",
      "matches": ["https://www.seongnam.go.kr/*"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation",
    "tabs",
    "declarativeContent",
    "storage"
  ]
}
